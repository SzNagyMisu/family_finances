= form_for @expense do |f|
  - if @expense.errors.any? # TODO
    #error_explanation
      %h2= "#{pluralize(@expense.errors.count, "error")} prohibited this expense from being saved:"
      %ul
        - @expense.errors.full_messages.each do |message|
          %li= message

  .form-group
    .field.expense_category_id.form-group
      = f.label :category_id
      .input-group
        = f.collection_select :category_id, ::Finances::ExpenseCategory.all, :id, :name, { prompt: true }, { class: 'form-control' }
        = link_to new_expense_category_path, title: t('.new_expense_category'), target: :_blank, class: 'input-group-addon' do
          %span.glyphicon.glyphicon-plus
    .field.expense_title.form-group
      = f.label :title
      = f.text_field :title, class: 'form-control'
    .field.expense_amount.form-group
      = f.label :amount
      = f.number_field :amount, class: 'form-control'
    .field.expense_realized_on.form-group
      = f.label :realized_on
      = f.text_field :realized_on, class: 'form-control' # TODO date-picker
    .actions.form-group
      = f.submit class: 'btn btn-primary'
